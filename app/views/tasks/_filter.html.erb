<%= form_with url: tasks_path, method: :get do %>
    <div class="filter-wrapper">
        <div class="filter-wrapper">
            <p class="filter-heading">Kategorier</p>

            <div class="filter-items">
                <% Category.all.each do |category| %>
                    <div class="filter-item">
                    <%= check_box_tag "category_ids[]", category.id, params[:category_ids]&.include?(category.id.to_s), id: dom_id(category) %>
                    <%= label_tag dom_id(category), category.name %>
                    </div>
                <% end %>
            </div>
        
            <%= submit_tag "Filtrera", class: "primary-cta" %>
        </div>
    </div>
<% end %>